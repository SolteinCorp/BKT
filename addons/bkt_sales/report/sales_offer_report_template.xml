<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sales_offer_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                            <div class="row" style="border-top:1px solid #000000;">
                                <div class="col-xs-3 text-left" style='background-color:#D2CDCC;'>
                                    <span><b>EMPRESA: </b></span>
                                </div>
                                <div class="col-xs-9 text-left" style='background-color:#FFFFFF;'>
                                    <span t-field="o.partner_id.name"></span>
                                </div>
                            </div>
                            <div class="row" style="border-top:1px solid #000000;">
                                <div class="col-xs-3 text-left" style='background-color:#D2CDCC;'>
                                    <span><b>TELÉFONO: </b></span>
                                </div>
                                <div class="col-xs-3 text-left" style='background-color:#FFFFFF;'>
                                    <span t-field="o.partner_id.name"></span>
                                </div>
                                <div class="col-xs-3 text-left" style='background-color:#D2CDCC;'>
                                    <span><b>ATENCIÓN: </b></span>
                                </div>
                                <div class="col-xs-3 text-left" style='background-color:#FFFFFF;'>
                                    <span t-field="o.user_id.name"></span>
                                </div>
                            </div>
                            <div class="row" style="border-top:1px solid #000000;">
                                    <div class="col-xs-3 text-left" style='background-color:#D2CDCC;'>
                                        <span><b>CORREO: </b></span>
                                    </div>
                                    <div class="col-xs-3 text-left" style='background-color:#FFFFFF;'>
                                        <span t-field="o.partner_id.email"></span>
                                    </div>
                                    <div class="col-xs-3 text-left" style='background-color:#D2CDCC;'>
                                        <span><b>FECHA: </b></span>
                                    </div>
                                    <div class="col-xs-3 text-left" style='background-color:#FFFFFF;'>
                                        <span t-field="o.confirmation_date"></span>
                                    </div>
                            </div>
                            <div class="row" style="border-top:1px solid #000000;">
                                    <div class="col-xs-3 text-left" style='background-color:#D2CDCC;'>
                                        <span><b>CONTIZACIÓN: </b></span>
                                    </div>
                                    <div class="col-xs-3 text-left" style='background-color:#FFFFFF;'>
                                        <span t-field="o.name"></span>
                                    </div>
                                    <div class="col-xs-3 text-left" style='background-color:#D2CDCC;'>
                                        <span><b>PÁGINA: </b></span>
                                    </div>
                                    <div class="col-xs-3 text-left" style='background-color:#FFFFFF;'>
                                        <span t-esc="page_count"/> de <span t-esc="page"/>
                                    </div>
                            </div>
                            <div class="row" style="border-top:1px solid #000000;border-bottom:1px solid #000000;">
                                    <div class="col-xs-3 text-left" style='background-color:#D2CDCC;'>
                                        <span><b>CIUDAD: </b></span>
                                    </div>
                                    <div class="col-xs-9 text-left" style='background-color:#FFFFFF;'>
                                        <span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.state_id.name"/>
                                    </div>
                            </div>


                        <p style="text-justify"> POR MEDIO DE LA PRESENTE ME ES GRATO ENVIAR UN CORDIAL SALUDO, ASÍ MISMO PONER A SU ATENTA CONSIDERACIÓN
                            LA SIGUIENTE COTIZACIÓN.</p>
                        <br/>

                        <table class="table" style='border:2px solid #000000;'>
                            <div class="row" style='background-color:#000000;border:2px solid #000000;'>
                                <div class="col-xs-1">
                                    <b style="color:#FFFFFF;">ÍTEM </b>
                                </div>
                                <div class="col-xs-2" >
                                   <b style="color:#FFFFFF;">DESCRIPCIÓN</b>
                                </div>
                                <div class="col-xs-4" >
                                   <b style="color:#FFFFFF;">NOMBRE/CÓDIGO</b>
                                </div>
                                <div class="col-xs-1" >
                                   <b style="color:#FFFFFF;">CANT.</b>
                                </div>
                                <div class="col-xs-2" >
                                   <b style="color:#FFFFFF;">PRECIO UNITARIO</b>
                                </div>
                                <div class="col-xs-2" >
                                   <b style="color:#FFFFFF;">PRECIO</b>
                                </div>
                            </div>
                            <div class="row" t-foreach="o.order_line" t-as="line" style="border:2px solid #000000;">
                                <div class="col-xs-1" >
                                   <span t-esc="line_index"/>
                                </div>
                                <div class="col-xs-2" >
                                   <span t-field="line.product_id.image_small" t-field-options="{'widget': 'image'}"/>
                                 </div>
                                <div class="col-xs-4" >
                                   <span t-field="line.product_id.name"/> / <span t-field="line.product_id.default_code"/>
                                 </div>
                                <div class="col-xs-1 text-center" >
                                   <span t-field="line.product_uom_qty"/>
                                 </div>
                                <div class="col-xs-2" >
                                   <span t-field="line.price_unit"/>
                                 </div>
                                <div class="col-xs-2" >
                                   <span t-field="line.price_subtotal"/>
                                 </div>
                            </div>
                        </table>
                         <br/>
                    </div>
                </t>
            </t>
        </t>
    </template>

     <report
        id="sales_offer_report"
        name="bkt_sales.sales_offer_report_template"
        model="sale.order"
        report_type="qweb-html"
        string="Cotizaci&#243;n"
        file="bkt_sales.sales_offer_report_template"
        menu="False"
        attachment_use="False"
    />
</odoo>