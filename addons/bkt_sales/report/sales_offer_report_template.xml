<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sales_offer_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <table class="table-condensed">
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-6 text-left" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>ORDEN DE TRABAJO</b></span>
                                </div>
                                <div class="col-xs-3 text-right" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>Folio:</b></span>
                                </div>
                                <div class="col-xs-3">
                                    <span >-</span>
                                </div>
                            </div>
                        <br/>
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-3 text-left" style='background-color:#000000;'>
                                    <b style="color:#FFFFFF;">NO. DE COTIZACIÓN</b>
                                </div>
                                <div class="col-xs-9" style='background-color:#FFFFFF;'>
                                    <span t-field="o.name"/>
                                </div>
                            </div>
                        <br/>
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-3 text-left" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>FECHA</b></span>
                                </div>
                                <div class="col-xs-3" style='background-color:#FFFFFF;'>
                                    <span t-field="o.confirmation_date"/>
                                </div>
                                <div class="col-xs-3" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>SOLICITA</b></span>
                                </div>
                                <div class="col-xs-3" style='background-color:#FFFFFF;'>
                                    <span t-field="o.user_id.name"/>
                                </div>
                            </div>
                        <br/>
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-3 text-left" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>CLIENTE</b></span>
                                </div>
                                <div class="col-xs-3" style='border-color:#000000;'>
                                    <span t-field="o.contact_delivery_id.name"/>
                                </div>
                                <div class="col-xs-3" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>EMPRESA</b></span>
                                </div>
                                <div class="col-xs-3" style='border-color:#000000;'>
                                    <span t-field="o.partner_id.name"/>
                                </div>
                            </div>
                        <br/>
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-3 text-left" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>REQUIERE ENVÍO</b></span>
                                </div>
                                <div class="col-xs-3" style='background-color:#FFFFFF;'>
                                        <span t-if="o.otp_count!=0" >SI</span>
                                        <span t-if="o.otp_count==0" >NO</span>
                                </div>
                                <div class="col-xs-3" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>REQUIERE INSTALACIÓN</b></span>
                                </div>
                                <div class="col-xs-3" style='background-color:#FFFFFF;'>
                                             <span t-if="o.project_instalation_count!=0" >SI</span>
                                        <span t-if="o.project_instalation_count==0" >NO</span>
                                </div>
                            </div>
                            <br/>
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-3 text-left" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>LUGAR DE ENVÍO</b></span>
                                </div>
                                <div class="col-xs-3" style='border-color:#000000;'>
                                    <span t-field="o.home_delivery"/>
                                </div>
                                <div class="col-xs-3" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>CONTACTO DE ENTREGA</b></span>
                                </div>
                                <div class="col-xs-3" style='border-color:#000000;'>
                                    <span t-field="o.contact_delivery_id.name"/>
                                </div>
                            </div>
                            <br/>
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-3 text-left" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>DOMICILIO DE ENTREGA</b></span>
                                </div>
                                <div class="col-xs-9" style='background-color:#FFFFFF;'>
                                    <span t-field="o.partner_shipping_id.street"/> y <span t-field="o.partner_shipping_id.street2"/>,
                                    <span t-field="o.partner_shipping_id.state_id.name"/> <span t-field="o.partner_shipping_id.country_id.name"/>
                                </div>
                            </div>
                            <br/>
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-3" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>FECHA PROMESA</b></span>
                                </div>
                                <div class="col-xs-9">
                                    <span t-field="o.date_promise"/>
                                </div>
                            </div>
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-3 text-left" style='background-color:#000000;'>
                                    <span style="color:#FFFFFF;"><b>FECHA DE ENTREGA</b></span>
                                </div>
                                <div class="col-xs-9" >
                                    <span t-field="o.confirmation_date"/>
                                </div>
                            </div>
                        </table>
                        <br/>
                        <table class="table-bordered">
                            <div class="row" style="border-bottom:2px solid #000000;">
                                <div class="col-xs-12 text-left">
                                    <b>Productos</b>
                                </div>
                            </div>
                        </table>

                        <table class="table" style='border:2px solid #000000;'>
                            <div class="row" style='background-color:#000000;border:2px solid #000000;'>
                                <div class="col-xs-2">
                                    <b style="color:#FFFFFF;">Código </b>
                                </div>
                                <div class="col-xs-3" >
                                   <b style="color:#FFFFFF;">Nombre</b>
                                </div>
                                <div class="col-xs-3" >
                                   <b style="color:#FFFFFF;">Modelo</b>
                                </div>
                                <div class="col-xs-2" >
                                   <b style="color:#FFFFFF;">Imagen</b>
                                </div>
                                <div class="col-xs-2" >
                                   <b style="color:#FFFFFF;">Cant.</b>
                                </div>
                            </div>
                            <div class="row" t-foreach="o.order_line" t-as="line" style="border:2px solid #000000;">
                                <div class="col-xs-2" >
                                   <span t-field="line.product_id.default_code"/>
                                </div>
                                <div class="col-xs-3" >
                                   <span t-field="line.product_id.name"/>
                                 </div>
                                <div class="col-xs-3" >
                                   <span t-field="line.product_id.name"/>
                                 </div>
                                <div class="col-xs-2 text-center" >
                                   <span t-field="line.product_id.image_small" t-field-options="{'widget': 'image'}"/>
                                 </div>
                                <div class="col-xs-2" >
                                   <span t-field="line.product_uom_qty"/>
                                 </div>

                            </div>
                        </table>
                         <br/>
                        <table class="table-condensed">
                            <div class="row" style="border-bottom:2px solid #000000;">
                                <div class="col-xs-12 text-left">
                                    <span ><b>Órdenes de Compra</b></span>
                                </div>
                            </div>
                        </table>
                        <table class="table-condensed">
                            <div class="row" t-foreach="o.purchase_ids" t-as="line">
                                        <br/>
                                        <div class="col-xs-2 text-left">
                                            <b>Folio: </b>
                                        </div>
                                        <div class="col-xs-2 text-left" >
                                            <span t-field="line.name"/>
                                        </div>
                                        <div class="col-xs-2 text-left">
                                            <b>Fecha de Entrega: </b>
                                        </div>
                                        <div class="col-xs-2 text-left">
                                            <span t-field="line.date_planned"/>
                                        </div>
                                        <div class="col-xs-2 text-left">
                                           <b>Status: </b>
                                        </div>
                                        <div class="col-xs-2 text-left">
                                            <span t-field="line.state"/>
                                        </div>
                            </div>
                        </table>
                        <br/>
                        <table class="table-condensed">
                            <div class="row" style="border-bottom:2px solid #000000;">
                                <div class="col-sm-3 text-left">
                                    <span ><b>Órdenes de Producción</b></span>
                                </div>
                            </div>
                        </table>
                        <br/>
                        <table class="table-condensed">
                            <div class="row" t-foreach="o.mrp_ids" t-as="line">
                                        <br/>
                                        <div class="col-xs-3 text-left">
                                            <b>Folio: </b>
                                        </div>
                                        <div class="col-xs-3 text-left">
                                            <span t-field="line.name"/>
                                        </div>
                                        <div class="col-xs-3 text-left">
                                           <b>Status: </b>
                                        </div>
                                        <div class="col-xs-3 text-left">
                                            <span t-field="line.state"/>
                                        </div>
                            </div>
                        </table>
                        <br/>
                        <table >
                            <div class="row" style="border-bottom:2px solid #000000;">
                                <div class="col-sm-3 text-left">
                                    <b>Órdenes de Salida</b>
                                </div>
                            </div>
                        </table>
                        <br/>
                        <table class="table-condensed">
                            <div class="row" t-foreach="o.otp_order_ids" t-as="line">
                                        <br/>
                                        <div class="col-xs-2 text-left">
                                            <b>Folio: </b>
                                        </div>
                                        <div class="col-xs-2 text-left">
                                            <span t-field="line.name"/>
                                        </div>
                                        <div class="col-xs-2 text-left">
                                            <b>Fecha de Entrega: </b>
                                        </div>
                                        <div class="col-xs-2 text-left">
                                            <span t-field="line.scheduled_date"/>
                                        </div>
                                        <div class="col-xs-2 text-left">
                                           <b>Status: </b>
                                        </div>
                                        <div class="col-xs-2 text-left">
                                            <span t-field="line.state"/>
                                        </div>
                            </div>
                        </table>
                        <br/>

                        <table class="table-condensed">
                            <div class="row" style='background-color:#000000;'>
                                <div class="col-xs-12">
                                    <b style="color:#FFFFFF;">ACUERDOS</b>
                                </div>
                            </div>
                            <div class="row" style="border:2px solid #000000;">
                                <div class="col-xs-12">
                                    <span t-field="o.terms_delivery"/>
                                </div>
                            </div>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>

     <report
        id="sales_offer_report"
        name="bkt_sales.sales_offer_report_template"
        model="sale.order"
        report_type="qweb-pdf"
        string="Cotizaci&#243;n"
        file="bkt_sales.sales_offer_report_template"
        menu="False"
        attachment_use="False"
    />
</odoo>