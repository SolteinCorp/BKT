<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_project_ext_form" model="ir.ui.view">
        <field name="name">project.ext.bkt</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_installation"/>
                </xpath>
            </data>
        </field>
    </record>



     <record id="view_project_ext_form" model="ir.ui.view">
        <field name="name">project.ext.bkt</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                     <group>
                        <field name="is_installation" />
                    </group>
                </xpath>
                <!--xpath expr="//div[@name='button_box']" position="inside">
                     <button class="oe_stat_button" name="print_project_pdf"
                              type="object" icon="fa-print" attrs="{'invisible': [('is_installation','=',False)]}">
                           <span>Imprimir</span>
                     </button>
                </xpath-->

            </data>
        </field>
    </record>


    <record id="view_project_task_ext_form" model="ir.ui.view">
        <field name="name">project.task.ext.bkt</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//div[@class='oe_title']" position="after">
                    <group>
                        <field name="is_installation" />
                    </group>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
